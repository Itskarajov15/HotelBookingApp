@model UserRolesViewModel

@{
    ViewData["Title"] = "User Roles";
}

<div class="row">
    <div class="col-4">
        <form id="roles" method="post">
            <input type="hidden" name="Id" value="@Model.UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h4>User: @Html.DisplayFor(m => m.Name)</h4>
            </div>
            <div class="form-floating">
                <div class="form-group">
                    <label>Multiple</label>
                    <select asp-for="RoleIds" class="select2bs4 select2-hidden-accessible" multiple="" data-placeholder="Select a Role" style="width: 100%;" data-select2-id="23" tabindex="-1" aria-hidden="true">
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.RoleItems)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
            </div>

            <input class="btn btn-primary" type="submit" value="Submit" />
        </form>
    </div>
</div>