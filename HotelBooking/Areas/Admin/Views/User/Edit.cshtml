@model UserEditViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="row">
    <div class="col-4">
        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" aria-required="true">
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" aria-required="true">
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary" type="submit" value="Submit" />
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}