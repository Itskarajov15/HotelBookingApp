@model HotelEditViewModel

@{
    ViewData["Title"] = "Edit Hotel";
    var cities = (List<SelectListItem>)ViewBag.Cities;
}

<div class="row">
    <div class="col-4">
        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="HotelName" class="form-label"></label>
                <input asp-for="HotelName" class="form-control" aria-required="true">
                <span asp-validation-for="HotelName" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" aria-required="true">
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PrimaryImageUrl" class="form-label"></label>
                <input asp-for="PrimaryImageUrl" class="form-control" aria-required="true">
                <span asp-validation-for="PrimaryImageUrl" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FirstAdditionalImageUrl" class="form-label"></label>
                <input asp-for="FirstAdditionalImageUrl" class="form-control" aria-required="true">
                <span asp-validation-for="FirstAdditionalImageUrl" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SecondAdditionalImageUrl" class="form-label"></label>
                <input asp-for="SecondAdditionalImageUrl" class="form-control" aria-required="true">
                <span asp-validation-for="SecondAdditionalImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId"></label>
                <select asp-for="CityId" class="form-control">
                    @foreach (var city in Model.Cities)
                    {
                        <option value="@city.Id" selected="selected">@city.Name</option>
                    }
                </select>
            </div>
            <input class="btn btn-primary" type="submit" value="Submit" />
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}