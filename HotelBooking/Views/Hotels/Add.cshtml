@model AddHotelViewModel

@{
    ViewData["Title"] = "Add Hotel";
}


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-lg-3 col-xl-6">
        <h2 class="heading-margin text-center">Add Hotel</h2>

        <form method="post">
            <div class="mb-3">
                <label asp-for="HotelName" class="form-label"></label>
                <input asp-for="HotelName" class="form-control">
                <span asp-validation-for="HotelName" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PrimaryImageUrl" class="form-label"></label>
                <input asp-for="PrimaryImageUrl" class="form-control">
                <span asp-validation-for="PrimaryImageUrl" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FirstAdditionalImageUrl" class="form-label"></label>
                <input asp-for="FirstAdditionalImageUrl" class="form-control">
                <span asp-validation-for="FirstAdditionalImageUrl" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SecondAdditionalImageUrl" class="form-label"></label>
                <input asp-for="SecondAdditionalImageUrl" class="form-control">
                <span asp-validation-for="SecondAdditionalImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId"></label>
                <select asp-for="CityId" class="form-control">
                    @foreach (var city in Model.Cities)
                    {
                        <option value="@city.Id">@city.CityName</option>
                    }
                </select>
            </div>

            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>